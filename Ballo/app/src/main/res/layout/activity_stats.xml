<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.uw.nzkwgo.ballo.StatsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Stats"
        android:textStyle="bold"
        android:textSize="20pt"
        android:textColor="black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your pet is DEAD"
        android:textColor=""
        android:textSize="15pt"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="5pt"
            android:gravity="center">
            <TextView
                android:text="Age"
                android:textColor="black"
                android:textSize="11pt"/>
            <TextView
                android:text="385"
                android:textColor="black"
                android:textSize="11pt"/>
            <TextView
                android:text="days"
                android:textColor="black"
                android:textSize="11pt"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="5pt"
            android:gravity="center">
            <TextView
                android:text="Distance Walked"
                android:textColor="black"
                android:textSize="11pt"/>
            <TextView
                android:text="290.00"
                android:textColor="black"
                android:textSize="11pt"/>
            <TextView
                android:text="miles"
                android:textColor="black"
                android:textSize="11pt"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="5pt"
            android:gravity="center">
            <TextView
                android:text="Number of times fed"
                android:textColor="black"
                android:textSize="11pt"/>
            <TextView
                android:text="421"
                android:textColor="black"
                android:textSize="11pt"/>
            <TextView
                android:text=""
                android:textColor="black"
                android:textSize="11pt"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="5pt"
            android:gravity="center">
            <TextView
                android:text="Number of times bounced"
                android:textColor="black"
                android:textSize="11pt"/>
            <TextView
                android:text="421"
                android:textColor="black"
                android:textSize="11pt"/>
            <TextView
                android:text=""
                android:textColor="black"
                android:textSize="11pt"/>
        </TableRow>



    </TableLayout>
</LinearLayout>
